          <small class="errorReq"><i class="fa fa-asterisk" aria-hidden="true"></i> required field</small>
        </div>
        <div class="form-item box-item">
          <input type="email" name="email" placeholder="Email" maxlength="34" required >
          <small class="errorReq"><i class="fa fa-asterisk" aria-hidden="true"></i> required field</small>
          <small class="errorEmail"><i class="fa fa-asterisk" aria-hidden="true"></i> email is not valid</small>
        </div>
         <div class="form-item box-item">
          <input type="text" name="phone" placeholder="Phone" maxlength="10" required>
          <small class="errorReq"><i class="fa fa-asterisk" aria-hidden="true"></i> required field</small>
          <small class="errorNum"><i class="fa fa-asterisk" aria-hidden="true"></i> must be a number</small>
          <small class="errorChar"><i class="fa fa-asterisk" aria-hidden="true"></i> must be 10 digits</small>
        </div>
         <div class="form-item box-item">
          <input type="text" name="wphone" placeholder="whatsapp number" maxlength="10">
          <small class="errorReq"><i class="fa fa-asterisk" aria-hidden="true"></i> required field</small>
          <small class="errorNum"><i class="fa fa-asterisk" aria-hidden="true"></i> must be a number</small>
          <small class="errorChar"><i class="fa fa-asterisk" aria-hidden="true"></i> must be 10 digits</small>
        </div>
        <div class="form-item box-item">
          <input type="text" name="address" placeholder="Address"  maxlength="140" required>
          <small class="errorReq"><i class="fa fa-asterisk" aria-hidden="true"></i> required field</small>
        </div>
      
       <div class="form-item box-item">
          <input  type="url" name="fb" placeholder="Facebook link " >
          <small class="errorReq"><i class="fa fa-asterisk" aria-hidden="true"></i> required field</small>
          <small class="error"><i class="fa fa-asterisk" aria-hidden="true"></i> enter valid link</small>
        </div>
       <div class="form-item box-item">
          <input  type="url" name="insta" placeholder="instagram link" >
          <small class="errorReq"><i class="fa fa-asterisk" aria-hidden="true"></i> required field</small>
            <small class="error"><i class="fa fa-asterisk" aria-hidden="true"></i> enter valid link</small>
        </div>
        <div class="form-item box-item">
          <input  type="url" name="twitter" placeholder="twitter link" >
          <small class="errorReq"><i class="fa fa-asterisk" aria-hidden="true"></i> required field</small>
            <small class="error"><i class="fa fa-asterisk" aria-hidden="true"></i> enter valid link</small>
        </div>
        <div class="form-item box-item">
          <input type="url" name="web" placeholder="Your webSite">
          <small class="errorReq"><i class="fa fa-asterisk" aria-hidden="true"></i> required field</small>
         <small class="error"><i class="fa fa-asterisk" aria-hidden="true"></i> enter valid link</small>
        </div>
       
      
        <div class="form-item">
        
           <input type="submit" class="submit" value="CREATE CARD">
        </div>
      </form>
    </main>
    <footer>
      
    </footer>
    <i class="wave"></i>
  </section>
</div>
